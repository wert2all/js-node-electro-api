doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Dashboard
        script(src='../assets/css.bundle.js')
    body
        // HEADER
        header#top-head.uk-position-fixed
            .uk-container.uk-container-expand.uk-background-primary
                nav.uk-navbar.uk-light(data-uk-navbar='mode:click; duration: 250')
                    .uk-navbar-right
                        ul.uk-navbar-nav
                            li
                                a.profile_link(href='#', data-uk-icon='icon:user', title='Your profile', data-uk-tooltip='')
                            li
                                a.profile_sign_out(href='#', data-uk-icon='icon:  sign-out', title='Sign Out', data-uk-tooltip='')
                            li
                                a.uk-navbar-toggle(data-uk-toggle='', data-uk-navbar-toggle-icon='', href='#offcanvas-nav', title='Offcanvas', data-uk-tooltip='')
        // /HEADER
        // LEFT BAR
        aside#left-col.uk-light(class='uk-visible@m')
            .left-logo.uk-flex.uk-flex-middle
                img.custom-logo(src='../assets/img/dashboard-logo.svg', alt='')
            #userprofile_container.left-content-box.content-box-dark
                img.uk-border-circle.profile-img(src='../assets/img/avatar.svg', alt='')
                h4.uk-text-center.uk-margin-remove-vertical.text-light John Doe
                .uk-position-relative.uk-text-center.uk-display-block
                    a.uk-text-small.uk-text-muted.uk-display-block.uk-text-center(href='#', data-uk-icon='icon: triangle-down; ratio: 0.7') Admin
                    // user dropdown
                    .uk-dropdown.user-drop(data-uk-dropdown='mode: click; pos: bottom-center; animation: uk-animation-slide-bottom-small; duration: 150')
                        ul.uk-nav.uk-dropdown-nav.uk-text-left
                            li
                                a.profile_link(href='#')
                                    span(data-uk-icon='icon: image')
                                    |  Your Data
                            li.uk-nav-divider
                            li
                                a.profile_sign_out(href='#')
                                    span(data-uk-icon='icon: sign-out')
                                    |  Sign Out
                    // /user dropdown
            .left-nav-wrap
                ul.uk-nav.uk-nav-default.uk-nav-parent-icon(data-uk-nav='')
                    li.uk-nav-header ACTIONS
                    li
                        a(href='#')
                            span.uk-margin-small-right(data-uk-icon='icon: comments')
                            | Messages
                    li
                        a(href='#')
                            span.uk-margin-small-right(data-uk-icon='icon: users')
                            | Friends
            .bar-bottom
                ul.uk-subnav.uk-flex.uk-flex-center.uk-child-width-1-5(data-uk-grid='')
                    li
                        a.uk-icon-link(href='#', data-uk-icon='icon: home', title='Home', data-uk-tooltip='')
                    li
                        a.uk-icon-link(href='#', data-uk-icon='icon: social', title='Social', data-uk-tooltip='')
                    li
                        a.uk-icon-link.profile_link(href='#', data-uk-icon='icon:user', title='Your profile', data-uk-tooltip='')
                    li
                        a.uk-icon-link.profile_sign_out(href='#', data-uk-tooltip='Sign out', data-uk-icon='icon: sign-out')
        // /LEFT BAR
        // CONTENT
        #content(data-uk-height-viewport='expand: true')
            .uk-container.uk-container-expand
                hr

        #system
            #image_card_list.uk-grid.uk-grid-medium(data-uk-grid='')

            #one_image_card.uk-grid-margin(class='uk-width-1-2@s uk-width-1-3@l uk-width-1-4@xl')
                .uk-card.uk-card-default.uk-card-small.uk-card-hover.uk-custom-image-type-meter
                    .uk-card-badge.uk-label Meter
                    .uk-card-header
                        .uk-grid-small.uk-flex-middle(uk-grid='')
                            .uk-width-auto
                                img.uk-border-circle(width='40', height='40', src='../assets/img/avatar.svg')
                            .uk-width-expand
                                h3.uk-card-title.uk-margin-remove-bottom Title
                                    a.uk-icon-link.uk-icon.uk-margin-small-left(href='#', title='', data-uk-tooltip='', data-uk-icon='icon: user', aria-expanded='false')
                                p.uk-text-meta.uk-margin-remove-top
                                    time(datetime='2016-04-01T19:00') April 01, 2016
                    .uk-card-body
                        .chart-container
                            .uk-width-auto.uk-text-right
                                label.uk-switch.uk-switch-small(for='images_type')
                                    input#images_type(type='checkbox')
                                    .uk-switch-slider
                            .uk-card-media-bottom
                                img(src='../assets/img/avatar.svg', alt='')
                    .uk-card-footer
                        .uk-width-auto.uk-text-right
                            a.uk-icon-link.uk-icon(href='#', title='', data-uk-tooltip='', data-uk-icon='icon: download', aria-expanded='false')
                            a.uk-icon-link.uk-icon(href='#', title='', data-uk-tooltip='', data-uk-icon='icon: file-edit', aria-expanded='false')
                            a.uk-icon-link.uk-icon(href='#', title='', data-uk-tooltip='', data-uk-icon='icon: trash', aria-expanded='false')

            #modal_profile(uk-modal='')
                .uk-modal-dialog.uk-margin-auto-vertical
                    button.uk-modal-close-default(type='button', uk-close='')
                    .uk-modal-header
                        h2.uk-modal-title User profile
                    .uk-modal-body
                        img.uk-border-circle.profile-img(src='../assets/img/avatar.svg', alt='')
                        h4.uk-text-center.uk-margin-remove-vertical.text-light John Doe
                        p.uk-text-small.uk-text-center.uk-margin-remove-top user@email.com

                        form.uk-form-horizontal
                            .uk-margin
                                label.uk-form-label(for='profile_personal_number') Особистий номер
                                .uk-form-controls
                                    input#profile_personal_number.uk-input(type='text', placeholder='Особистий номер')
                            .uk-margin
                                label.uk-form-label(for='profile_KC') КС
                                .uk-form-controls
                                    input#profile_KC.uk-input(type='text', placeholder='КС')
                            .uk-margin
                                label.uk-form-label(for='profile_company_name') Назва постачальника
                                .uk-form-controls
                                    input#profile_company_name.uk-input(type='text', placeholder='Назва постачальника')
                            .uk-margin
                                label.uk-form-label(for='profile_iban') IBAN
                                .uk-form-controls
                                    input#profile_iban.uk-input(type='text', placeholder='IBAN')
                            .uk-margin
                                label.uk-form-label(for='profile_BIG') ЄДРПОУ
                                .uk-form-controls
                                    input#profile_BIG.uk-input(type='text', placeholder='ЄДРПОУ')
                    .uk-modal-footer.uk-text-right
                        button.uk-button.uk-button-primary(type='button') Save
        footer.uk-section.uk-section-small.uk-text-center
            hr
            p.uk-text-small.uk-text-center
                | Copyright 2020 -
                a(href='https://github.com/zzseba78/Kick-Off') Created by KickOff
                |  | Built with
                a(href='http://getuikit.com', title='Visit UIkit 3 site', target='_blank', data-uk-tooltip='')
                    span(data-uk-icon='uikit')
        // /CONTENT
        // OFFCANVAS
        #offcanvas-nav(data-uk-offcanvas='flip: true; overlay: true')
            .uk-offcanvas-bar.uk-offcanvas-bar-animation.uk-offcanvas-slide
                button.uk-offcanvas-close.uk-close.uk-icon(type='button', data-uk-close='')
                ul.uk-nav.uk-nav-default
                    li.uk-active
                        a(href='#')
                            span.uk-margin-small-right(data-uk-icon='icon: comments')
                            | Messages
                    li
                        a(href='#')
                            span.uk-margin-small-right(data-uk-icon='icon: users')
                            | Friends
        // /OFFCANVAS
        // JS FILES
        script(src='../assets/js.bundle.js')
